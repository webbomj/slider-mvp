{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jest", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "$": "readonly",
    "jQuery": "readonly"
  },
  "ignorePatterns": ["node_modules/**", "dist/**"],
  "rules": {
    "no-new": "warn",
    "func-names": "warn",
    "import/prefer-default-export": 0,
    "import/extensions": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  }
}
